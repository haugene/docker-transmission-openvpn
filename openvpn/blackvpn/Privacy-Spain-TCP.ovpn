auth-user-pass /config/openvpn-credentials.txt
remote spain.vpn.blackvpn.com 443 tcp
nobind
client
dev tun
fast-io
persist-key
persist-tun
cipher AES-256-CBC
txqueuelen 486
sndbuf 1655368
rcvbuf 1655368
auth SHA512
pull
comp-lzo
tls-client
key-method 2
ns-cert-type server
ca /etc/openvpn/blackvpn/ssl/ca.crt
tls-auth /etc/openvpn/blackvpn/ssl/ta.key 1
verb 3
mute 10
script-security 2
up /etc/openvpn/update-resolv-conf
down /etc/openvpn/update-resolv-conf
ifconfig-ipv6 fd69:2205:1941:1::1/64 fd69:2205:1941:1::2
route-ipv6 ::/128 ::1
